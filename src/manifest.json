{
    "manifest_version": 3,
    "name": "Chrome Extension Skeleton",
    "version": "1.0.0",
    "description": "A modern Vite + CRXJS Chrome Extension Skeleton",
    "action": {
        "default_popup": "src/action/index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "options_ui": {
        "page": "src/options/index.html",
        "open_in_tab": true
    },
    "background": {
        "service_worker": "src/background/index.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/index.js"
            ]
        }
    ],
    "side_panel": {
        "default_path": "src/sidepanel/index.html"
    },
    "permissions": [
        "storage",
        "activeTab",
        "sidePanel",
        "alarms",
        "contextMenus"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}